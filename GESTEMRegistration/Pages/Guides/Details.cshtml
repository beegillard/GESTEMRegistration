@page "/ManageRegistration/{id?}"
@model GESTEMRegistration.Pages.Guides.DetailsModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <form method="post">
        <label for="email">Enter your email:</label>
        <input type="text" id="email" name="email" />
        <button type="submit">Submit</button>
    </form>

@if (Model.ShowData)
    {



    <div>
        <h4>Guide</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Guide.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guide.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Guide.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guide.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Guide.PrevVolunteer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guide.PrevVolunteer)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Guide?.ID">Edit</a>
        <a asp-page="./Delete" asp-route-id="@Model.Guide?.ID">Cancel Registration</a>
        <a asp-page="../Index">GESTEM home </a>
    </div>
    }
</body>
</html>
