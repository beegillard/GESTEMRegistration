@page "{id:int}"
@model GESTEMRegistration.Pages.Guides.EditModel

 @*Edit?id=[id]*@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Guide</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Guide.ID" />
            <div class="form-group">
                <label asp-for="Guide.Name" class="control-label"></label>
                <input asp-for="Guide.Name" class="form-control" />
                <span asp-validation-for="Guide.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guide.Email" class="control-label"></label>
                <input asp-for="Guide.Email" class="form-control" />
                <span asp-validation-for="Guide.Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Guide.PrevVolunteer" /> @Html.DisplayNameFor(model => model.Guide.PrevVolunteer)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Return home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
